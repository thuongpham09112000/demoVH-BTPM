#cloud-config
hostname: ${hostname}
fqdn: ${hostname}.lab.com
package_update: true
package_upgrade: true
packages:
  - python3-pip
users:
  - name: ansible
    groups: sudo
    shell: /bin/bash
    lock_passwd: true
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    ssh_authorized_keys:
      - ssh-rsa  herman@bobcat.local
write_files:
  - path: /root/ansible/.ssh/id_rsa
    permissions: '0600'
    encoding: b64
    content: 
  - path: /root/ansible/.ssh/id_rsa.pub
    permissions: '0644'
    encoding: b64
    content: 
  - path: /root/ansible/ansible.cfg
    permissions: '0644'
    content: |
      [defaults]
      inventory=./hosts
      remote_user=ansible
      private_key_file=~/.ssh/id_rsa
      host_key_checking = False
  - path: /root/ansible/hosts
    permissions: '0644'
    content: |
      [labpub]
      labpub[1:3]
      [labprv]
      labprv[1:3]
runcmd:
  - pip3 install ansible
  - cp -r /root/ansible /home && rm -r /root/ansible && chown -R ansible:ansible /home/ansible
power_state:
  mode: reboot
  timeout: 10
  condition: True
